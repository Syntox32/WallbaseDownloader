<Window x:Class="WallbaseDownloader.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="195" Width="459" Icon="icon.ico" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <CheckBox x:Name="checkAsync" Content="Enable async download(Does not show progress if enabled)" HorizontalAlignment="Left" Margin="26,21,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkUseDate" Content="Name folder with date(Default: Wallbase)" HorizontalAlignment="Left" Margin="26,42,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkSort" Content="Sort by category(not to be confused with purity) " HorizontalAlignment="Left" Margin="26,63,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkCreateUrl" Content="Create a list of all the URL's downloaded" HorizontalAlignment="Left" Margin="26,94,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkCreateLog" Content="Create a log file, mostly debugging purposes" HorizontalAlignment="Left" Margin="26,115,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
